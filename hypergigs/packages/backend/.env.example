# Environment
NODE_ENV=development

# Server
PORT=3001
HOST=localhost

# Database
# PostgreSQL for both development and production
# Local development: Create a local PostgreSQL database named 'hypergigs_dev'
# Production (Railway): Railway sets this automatically
DATABASE_URL="postgresql://localhost:5432/hypergigs_dev"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=http://localhost:5173

# Socket.io
SOCKET_PORT=3002
