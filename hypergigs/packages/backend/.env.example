# Environment
NODE_ENV=development

# Server
PORT=3001
HOST=localhost

# Database
# PostgreSQL for both development and production
# Local development: Create a local PostgreSQL database named 'hypergigs_dev'
# Production (Railway): Railway sets this automatically
DATABASE_URL="postgresql://localhost:5432/hypergigs_dev"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# CORS
CORS_ORIGIN=http://localhost:5173

# Socket.io
SOCKET_PORT=3002

# OAuth
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# Email Configuration (SMTP)
# For Gmail: Use App Password (not regular password)
# Generate at: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-16-char-app-password
SMTP_FROM="Your App Name <noreply@yourapp.com>"

# Frontend URL (for email invitation links)
FRONTEND_URL=http://localhost:5173
